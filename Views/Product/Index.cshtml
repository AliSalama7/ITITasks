@model List<Product>

<table class="table table-bordered table-hover">
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <img src="/images/@item.ImageUrl" style="width:80px"/>
            </td>
            <td>
                <a href="/product/details/@item.Id">Details</a>
            </td>
        </tr>
    }
</table>
